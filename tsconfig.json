{
    "compilerOptions": {
        "noImplicitAny": false,
        "resolveJsonModule":true,
        "target": "ESNext",
        "esModuleInterop":true,
        "allowSyntheticDefaultImports":true,
        "downlevelIteration": true,
        "removeComments": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "module": "commonjs",
        "rootDir": "src/",
        "outDir": "dist/",
        "strict": true,
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/*", "index.ts", "config.ts"],
    "exclude": [
        "dist",
        "node_modules"
    ]
}


