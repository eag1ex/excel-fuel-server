{
    "compilerOptions": {
        "noImplicitAny": false,
        "resolveJsonModule":true,
        "target": "ESNext",
        "esModuleInterop":true,
        "allowSyntheticDefaultImports":true,
        "downlevelIteration": true,
        "removeComments": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "module": "commonjs",
        "rootDir": "src/",
        "outDir": "dist/",
        "strict": true,
        "baseUrl":"./",
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": { 
            "@api/interfaces":[
              "src/interfaces/index.ts"
            ],
        }
    },
    "include": [
        "src/*"],
    "exclude": [
        "dist",
        "node_modules"
    ]
}


